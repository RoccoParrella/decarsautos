extends ./layout/baseHome.pug
block content 

    header(class="header")
        nav.uk-navbar-container(uk-navbar='')
            .uk-navbar-left
                a.uk-navbar-item.uk-logo(href='/')
                    img(src="/static/img/LOGO-DECARS.jpg" id='logo-nav')
            .uk-navbar-right
                ul.uk-navbar-nav
                    li
                        a(href='/') HOME
                    li
                        a(href='/vehiculos') AUTOS
                    li
                        a(href='/contacto') CONTACTO

        

        button(type='button' class="button-menu"  uk-toggle='target: #offcanvas-nav-primary')
            a.uk-navbar-toggle(uk-navbar-toggle-icon='' class="menu-logo" )

        #offcanvas-nav-primary(uk-offcanvas='overlay: true')
            .uk-offcanvas-bar.uk-flex.uk-flex-column
                ul.uk-nav.uk-nav-primary.uk-nav-center.uk-margin-auto-vertical
                    li.uk-active
                        a.a-nav(href='/') Home
                    li
                        a(href='/vehiculos') Autos
                    li
                        a.a-nav(href='/contacto') Contacto

    main(class="main-home")
        div.banner-home
            a.button-comprar(href="/vehiculos") Comprá tu vehiculo
            a.button-comprar(href="/contacto") Vendé tu vehiculo
        div.ultimate-cars
            h2.h2-cars Ultimos Ingresos!
            ul.ul-autos
                each autos in data 
                    
                        li.li-autos
                            a(href=`/vehiculo/${autos._id}`)
                                div.div-img-autos
                                    img(class="img-autos" src=autos.img)
                                div.div-p-autos
                                    p.p-brand= `${autos.brand} ${autos.model}`
                                    p.p-year= `${autos.year} | ${autos.KM} km`
                                    p.p-price= `U$${autos.price}`
    a(href="https://wa.me/5491126433841" target="_blank") 
        img.logo-wsp(src="data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24'%3E%3Cpath fill='%23fff' d='M3.516 3.516c4.686-4.686 12.284-4.686 16.97 0 4.686 4.686 4.686 12.283 0 16.97a12.004 12.004 0 0 1-13.754 2.299l-5.814.735a.392.392 0 0 1-.438-.44l.748-5.788A12.002 12.002 0 0 1 3.517 3.517zm3.61 17.043.3.158a9.846 9.846 0 0 0 11.534-1.758c3.843-3.843 3.843-10.074 0-13.918-3.843-3.843-10.075-3.843-13.918 0a9.846 9.846 0 0 0-1.747 11.554l.16.303-.51 3.942a.196.196 0 0 0 .219.22l3.961-.501zm6.534-7.003-.933 1.164a9.843 9.843 0 0 1-3.497-3.495l1.166-.933a.792.792 0 0 0 .23-.94L9.561 6.96a.793.793 0 0 0-.924-.445 1291.6 1291.6 0 0 0-2.023.524.797.797 0 0 0-.588.88 11.754 11.754 0 0 0 10.005 10.005.797.797 0 0 0 .88-.587l.525-2.023a.793.793 0 0 0-.445-.923L14.6 13.327a.792.792 0 0 0-.94.23z'/%3E%3C/svg%3E", alt="")
    footer.footer
        div.div-footer
            div.div-flex 
                div 
                    p.p-contacto Contacto
                    div.footer-phone
                        div.footer-div-logo
                            span(uk-icon="receiver").phone
                        div.display-flex
                            a(href="https://wa.me/5491126433841" target="_blank").footer-number +54 9 11 2643-3841
                            a(href="https://wa.me/5491126433973" target="_blank").footer-number +54 9 11 2643-3973
                div
                    p.p-redes Seguinos en nuestras redes
                    div
                        a.redes(href="https://www.instagram.com/decarsauto/" target="_blank" uk-icon="instagram")
                        a.logo-redes.redes(href="https://www.facebook.com/profile.php?id=100082814576413" target="_blank" uk-icon="facebook") 
            div 
                p.p-copyright Copyright © 2021 DeCars

    script(src="https://cdn.jsdelivr.net/npm/uikit@3.15.5/dist/js/uikit.min.js")
    script(src="https://cdn.jsdelivr.net/npm/uikit@3.15.5/dist/js/uikit-icons.min.js")
